# Maintainer: Ivan Semkin (ivan at semkin dot ru)

pkgname=libertine-git
_pkgname=libertine
pkgver=4ae89b2
pkgrel=2
pkgdesc='A sandbox for running legacy deb-based X11 applications'
url='https://github.com/ubports/libertine'
arch=(x86_64 i686 armv7h aarch64)
license=(GPL3)
depends=(python3 gtest qt5-base qt5-quickcontrols)
makedepends=(git cmake cmake-extras-git dbus-test-runner intltool)
source=('git+https://github.com/ubports/libertine.git'
        'GtestInclude.patch')
sha256sums=('SKIP'
            'b2159654ed377606e5dc503105837528e6b6b15440067fbd8ed6b12470de0992')

pkgver() {
  cd ${_pkgname}
  git describe --always
}

prepare() {
  cd ${_pkgname}
  git checkout bionic
}

build() {
  cd ${_pkgname}
  cmake -DCMAKE_INSTALL_PREFIX:PATH=/usr -DCMAKE_INSTALL_LIBDIR="lib/" .
  make
}

package() {
  cd ${_pkgname}
  patch -Np1 -i "${srcdir}/GtestInclude.patch"
  make DESTDIR="${pkgdir}/" install
}
# vim:set ts=2 sw=2 et:
